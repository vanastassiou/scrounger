{
  "form_sections": {
    "acquisition": {
      "description": "Where and when the item was acquired",
      "fields": {
        "acquisition_date": {
          "default": "today",
          "required": true,
          "type": "date"
        },
        "item_id": {
          "auto_generate": true,
          "format": "UUID or incremental",
          "required": true,
          "type": "string"
        },
        "purchase_price": {
          "currency": "CAD",
          "required": true,
          "type": "currency"
        },
        "source_type": {
          "options": [
            "thrift",
            "consignment",
            "estate_sale",
            "garage_sale",
            "online",
            "gift",
            "other"
          ],
          "required": false,
          "type": "enum",
          "notes": "Type of source where item was acquired"
        },
        "store_id": {
          "references": "stores.json",
          "required": true,
          "type": "reference"
        },
        "tax_paid": {
          "currency": "CAD",
          "notes": "For accurate cost basis calculation",
          "required": false,
          "type": "currency"
        }
      }
    },
    "condition": {
      "description": "Item condition assessment",
      "fields": {
        "condition_notes": {
          "required": false,
          "type": "text"
        },
        "flaws": {
          "items": {
            "affects_wearability": "boolean",
            "flaw_type": {
              "options": [
                "stain",
                "hole",
                "tear",
                "missing_button",
                "broken_zipper",
                "pilling",
                "fading",
                "discolouration",
                "odour",
                "moth_damage",
                "stretched",
                "shrunk",
                "seam_damage",
                "lining_damage",
                "heel_wear",
                "sole_wear",
                "scuffs",
                "scratches",
                "tarnish",
                "patina",
                "missing_stone",
                "loose_stone",
                "broken_clasp",
                "bent",
                "dent",
                "crack",
                "chip",
                "repair_visible",
                "other"
              ],
              "type": "enum"
            },
            "location": "string",
            "repairable": "boolean",
            "severity": {
              "options": [
                "minor",
                "moderate",
                "significant"
              ],
              "type": "enum"
            }
          },
          "required": false,
          "type": "array"
        },
        "overall_condition": {
          "options": [
            "new_with_tags",
            "like_new",
            "excellent",
            "very_good",
            "good",
            "fair",
            "poor",
            "for_parts"
          ],
          "required": true,
          "type": "enum"
        },
        "repairs_completed": {
          "items": {
            "repair_cost": "currency",
            "repair_date": "date",
            "repair_type": "string"
          },
          "required": false,
          "type": "array"
        },
        "repairs_needed": {
          "items": "string",
          "required": false,
          "type": "array"
        }
      }
    },
    "intent": {
      "description": "Keep vs sell determination",
      "fields": {
        "intent": {
          "options": [
            "personal_keep",
            "resale",
            "undecided"
          ],
          "required": true,
          "type": "enum"
        },
        "resale_platform_target": {
          "conditional_on": "intent == resale",
          "options": [
            "poshmark",
            "ebay",
            "etsy",
            "depop",
            "facebook_marketplace",
            "local_consignment",
            "other"
          ],
          "required": false,
          "type": "multi_select"
        }
      }
    },
    "item_identification": {
      "description": "Core item details",
      "fields": {
        "brand": {
          "autocomplete_from": "brands.json",
          "notes": "Leave blank if unbranded or unknown",
          "required": false,
          "type": "string"
        },
        "category": {
          "options": [
            "clothing",
            "shoes",
            "jewelry",
            "accessories"
          ],
          "required": true,
          "type": "enum"
        },
        "description": {
          "notes": "Detailed description for listing",
          "required": false,
          "type": "text"
        },
        "era": {
          "options": [
            "pre_1920s",
            "1920s",
            "1930s",
            "1940s",
            "1950s",
            "1960s",
            "1970s",
            "1980s",
            "1990s",
            "2000s",
            "2010s",
            "contemporary",
            "unknown"
          ],
          "required": true,
          "type": "enum"
        },
        "subcategory": {
          "depends_on": "category",
          "options": {
            "accessories": [
              "handbag",
              "clutch",
              "wallet",
              "belt",
              "scarf",
              "hat",
              "gloves",
              "sunglasses",
              "hair_accessory",
              "other"
            ],
            "clothing": [
              "dress",
              "blouse",
              "shirt",
              "sweater",
              "cardigan",
              "jacket",
              "coat",
              "suit",
              "pants",
              "trousers",
              "skirt",
              "shorts",
              "jumpsuit",
              "romper",
              "vest",
              "lingerie",
              "sleepwear",
              "athletic",
              "swimwear",
              "formal_gown",
              "other"
            ],
            "jewelry": [
              "ring",
              "necklace",
              "pendant",
              "bracelet",
              "bangle",
              "earrings",
              "brooch",
              "pin",
              "watch",
              "cufflinks",
              "tie_clip",
              "anklet",
              "set",
              "other"
            ],
            "shoes": [
              "heels",
              "pumps",
              "flats",
              "boots",
              "ankle_boots",
              "sandals",
              "loafers",
              "oxfords",
              "sneakers",
              "mules",
              "platforms",
              "wedges",
              "slippers",
              "other"
            ]
          },
          "required": true,
          "type": "enum"
        }
      }
    },
    "jewelry_specific": {
      "conditional_on": "category == jewelry",
      "description": "Fields specific to jewelry items",
      "fields": {
        "closure_type": {
          "options": [
            "lobster_claw",
            "spring_ring",
            "toggle",
            "box_clasp",
            "hook_and_eye",
            "magnetic",
            "barrel",
            "push_back",
            "screw_back",
            "lever_back",
            "omega_back",
            "clip_on",
            "brooch_pin",
            "none",
            "other"
          ],
          "required": false,
          "type": "enum"
        },
        "hallmarks": {
          "items": {
            "interpretation": "string",
            "mark_description": "string",
            "mark_location": "string",
            "photo_reference": "string"
          },
          "required": false,
          "type": "array"
        },
        "metal_type": {
          "options": [
            "gold_24k",
            "gold_22k",
            "gold_18k",
            "gold_14k",
            "gold_10k",
            "gold_9k",
            "gold_filled",
            "gold_plated",
            "rolled_gold",
            "vermeil",
            "sterling_silver",
            "coin_silver",
            "silver_plated",
            "platinum",
            "palladium",
            "brass",
            "copper",
            "bronze",
            "pewter",
            "stainless_steel",
            "base_metal",
            "unknown"
          ],
          "required": true,
          "type": "enum"
        },
        "stones": {
          "items": {
            "approximate_carat": "number",
            "cut": "string",
            "notes": "string",
            "stone_type": "string",
            "treatment_suspected": "boolean"
          },
          "required": false,
          "type": "array"
        },
        "tested_with": {
          "options": [
            "magnet",
            "loupe_10x",
            "acid_test",
            "electronic_tester",
            "uv_light",
            "weight_comparison",
            "none"
          ],
          "required": false,
          "type": "multi_select"
        }
      }
    },
    "listing_status": {
      "description": "Sales tracking",
      "fields": {
        "listing_date": {
          "required": false,
          "type": "date"
        },
        "net_profit": {
          "calculated": true,
          "currency": "CAD",
          "formula": "sold_price - purchase_price - tax_paid - shipping_cost - platform_fees - sum(repairs_completed.repair_cost)",
          "type": "currency"
        },
        "platform_fees": {
          "currency": "CAD",
          "required": false,
          "type": "currency"
        },
        "shipping_cost": {
          "currency": "CAD",
          "required": false,
          "type": "currency"
        },
        "sold_date": {
          "required": false,
          "type": "date"
        },
        "sold_platform": {
          "required": false,
          "type": "string"
        },
        "sold_price": {
          "currency": "CAD",
          "required": false,
          "type": "currency"
        },
        "status": {
          "default": "unlisted",
          "options": [
            "unlisted",
            "photographed",
            "listed",
            "pending_sale",
            "sold",
            "returned",
            "donated",
            "kept"
          ],
          "required": true,
          "type": "enum"
        }
      }
    },
    "materials": {
      "description": "Material composition",
      "fields": {
        "material_notes": {
          "notes": "Details on material quality, hand feel, testing results",
          "required": false,
          "type": "text"
        },
        "material_verified": {
          "default": false,
          "notes": "True if verified via label, testing, or hallmark",
          "type": "boolean"
        },
        "primary_material": {
          "autocomplete_from": "materials.json",
          "required": true,
          "type": "string"
        },
        "secondary_materials": {
          "autocomplete_from": "materials.json",
          "items": "string",
          "required": false,
          "type": "array"
        }
      }
    },
    "photos": {
      "description": "Photo documentation",
      "fields": {
        "photos": {
          "items": {
            "file_path": "string",
            "photo_type": {
              "options": [
                "front",
                "back",
                "detail",
                "label",
                "flaw",
                "hallmark",
                "closure",
                "measurement",
                "styled",
                "sole",
                "heel",
                "inside",
                "clasp",
                "scale",
                "interior",
                "hardware"
              ],
              "type": "enum"
            }
          },
          "min_recommended": 4,
          "required": false,
          "type": "array"
        }
      }
    },
    "pricing": {
      "description": "Pricing and valuation",
      "fields": {
        "brand_premium_multiplier": {
          "default": 1.0,
          "notes": "Multiplier from brands.json",
          "required": false,
          "type": "number"
        },
        "comp_research": {
          "items": {
            "listing_url": "string",
            "notes": "string",
            "platform": "string",
            "sold_price": "currency"
          },
          "required": false,
          "type": "array"
        },
        "estimated_base_value": {
          "currency": "CAD",
          "notes": "Base value before brand premium",
          "required": false,
          "type": "currency"
        },
        "estimated_resale_value": {
          "currency": "CAD",
          "notes": "Target listing price",
          "required": false,
          "type": "currency"
        },
        "minimum_acceptable_price": {
          "currency": "CAD",
          "required": false,
          "type": "currency"
        }
      }
    },
    "sizing": {
      "description": "Size information",
      "fields": {
        "labeled_size": {
          "notes": "Size as marked on label",
          "required": false,
          "type": "string"
        },
        "measurements": {
          "conditional_fields": {
            "clothing": {
              "bust_inches": "number",
              "hips_inches": "number",
              "inseam_inches": "number",
              "length_inches": "number",
              "rise_inches": "number",
              "shoulder_width_inches": "number",
              "sleeve_length_inches": "number",
              "waist_inches": "number"
            },
            "jewelry": {
              "bracelet_circumference_inches": "number",
              "chain_length_inches": "number",
              "pendant_dimensions_mm": "string",
              "ring_size": "string",
              "weight_grams": "number"
            },
            "shoes": {
              "heel_height_inches": "number",
              "insole_length_cm": "number",
              "labeled_size": "string",
              "width": "enum:narrow,standard,wide,extra_wide"
            }
          },
          "required": false,
          "type": "object"
        },
        "modern_size_equivalent": {
          "notes": "Estimated modern size equivalent (vintage sizing differs)",
          "required": false,
          "type": "string"
        }
      }
    }
  },
  "meta": {
    "created": "2026-01-03",
